{
    "manifest_version": 2,
    "name": "Stunning Chrome Extension",
    "description": "Extension for releaving your stress",
    "version": "1.0.0",
    "icons": {
        "128": "icon-128.png"
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>"
    ]
}